@using TrinhHongQuyen_2122110059.Models
@model DashboardViewModel

<h2>Danh sách Dữ Liệu</h2>

<h3>Banners</h3>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Tiêu đề</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Banners)
        {
                <tr>
                    <a href="@Url.Action("AddBanner", "Dashboard", new { id = item.Id })" class="btn btn-primary btn-sm">Thêm</a>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>
                       
                        <a href="@Url.Action("EditBanner", "Dashboard", new { id = item.Id })" class="btn btn-primary btn-sm">Sửa</a>
                        <a href="@Url.Action("DeleteBanner", "Dashboard", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn chắc chắn muốn xóa?')">Xóa</a>
                    </td>
                </tr>
        }
    </tbody>
</table>


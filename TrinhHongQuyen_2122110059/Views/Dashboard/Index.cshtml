<h3>Products</h3>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
                <tr>
                    <a href="@Url.Action("AddProduct", "Dashboard", new { id = item.Id })" class="btn btn-primary btn-sm">Thêm</a>
